<%- include("header.ejs") %>

<div class='container'>

<header class='jumbotron'>
	<div class='container'>
	<h1>Welcome to Yelpcamp !</h1>
	<p>Making the world a better place !</p>
	<p><a class='btn btn-primary btn-lrg' href="/campgrounds/new">Add new Campground</a></p>
	</div>
</header>


<div class='row' style="display:flex; flex-wrap:wrap">

<% for(var i=0;i<camps.length;i++){ %>
	<div class='col-md-3 col-sm-6'> 
		<div class='thumbnail'>
		<img style="width:280" src="<%= camps[i].image %>" >
		<div class='caption'><h3> <%= camps[i].name %> </h3></div>
		</div>
	</div>
<% } %>

</div>

</div>

